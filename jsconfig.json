{
  "$schema": "https://www.schemastore.org/jsconfig.json",
  "include": ["src/**/*", "types/**/*"],
  "compilerOptions": {
    "module": "commonjs",
    "skipDefaultLibCheck": true,
    "moduleResolution": "classic",
    "composite": true,
    "isolatedModules": true,
    "lib": ["ES5", "ES2015"],
    "incremental": true,
    "target": "ES2015",
    "skipLibCheck": true,
    "rootDir": ".",
    "allowJs": true
  }
}
